<mapper namespace="com.izpan.modules.system.repository.mapper.SysDictItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="SysDictItemResultMap" type="com.izpan.modules.system.domain.entity.SysDictItem">
        <result column="dict_id" property="dictId"/>
        <result column="dict_code" property="dictCode"/>
        <result column="value" property="value"/>
        <result column="zh_cn" property="zhCN"/>
        <result column="en_us" property="enUS"/>
        <result column="type" property="type"/>
        <result column="sort" property="sort"/>
        <result column="description" property="description"/>
        <result column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="SysDictItemColumnList">
        id,
        create_user,
        create_user_id,
        create_time,
        update_user,
        update_user_id,
        update_time,
        is_deleted,
        dict_id, dict_code, value, zh_cn, en_us, sort, description, status
    </sql>

    <select id="queryAllDictItemList" resultMap="SysDictItemResultMap">
        SELECT
            sdi.*
        FROM
            sys_dict sd
        LEFT JOIN sys_dict_item sdi
        ON
            sd.id = sdi.dict_id
            AND sdi.status = 1
            AND sdi.is_deleted = 0
        WHERE
            sd.status = 1
            AND sd.is_deleted = 0
          <if test="code != null and code != ''">
            AND sdi.dict_code = #{code}
          </if>
    </select>

</mapper>
